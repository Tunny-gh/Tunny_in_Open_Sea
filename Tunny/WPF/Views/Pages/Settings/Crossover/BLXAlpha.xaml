<Page
    x:Class="Tunny.WPF.Views.Pages.Settings.Crossover.BLXAlpha"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tunny.WPF.Views.Pages.Settings.Crossover"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="175"
    mc:Ignorable="d">

    <GroupBox
        Margin="5"
        Background="#E2E8F4"
        Header="BLX-Alpha Crossover">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Alpha" />
            <TextBox
                x:Name="AlphaTextBox"
                Grid.Column="1"
                Margin="5"
                LostFocus="AlphaTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
        </Grid>
    </GroupBox>
</Page>
