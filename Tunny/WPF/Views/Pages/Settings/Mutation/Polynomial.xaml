<Page
    x:Class="Tunny.WPF.Views.Pages.Settings.Mutation.Polynomial"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tunny.WPF.Views.Pages.Settings.Mutation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Polynomial"
    d:DesignHeight="150"
    d:DesignWidth="175"
    mc:Ignorable="d">

    <GroupBox
        Margin="5"
        Background="#E2E8F4"
        Header="Polynomial Mutation">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Eta" />
            <TextBox
                x:Name="EtaTextBox"
                Grid.Column="1"
                Margin="5"
                LostFocus="EtaTextBox_LostFocus"
                Text="20"
                TextAlignment="Right" />
        </Grid>
    </GroupBox>
</Page>
