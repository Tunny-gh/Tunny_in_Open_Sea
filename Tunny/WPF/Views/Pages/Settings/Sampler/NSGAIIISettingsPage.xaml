<Page
    x:Class="Tunny.WPF.Views.Pages.Settings.Sampler.NSGAIIISettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tunny.WPF.Views.Pages.Settings.Sampler"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NSGAIIISettingsPage"
    d:DesignHeight="350"
    d:DesignWidth="350"
    mc:Ignorable="d">

    <GroupBox
        Margin="5"
        Background="#E2E8F4"
        Header="GenericAlgorithm (NSGA-III) Settings">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Seed" />
            <TextBox
                x:Name="NsgaiiiSeedTextBox"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiiSeedTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
            <Label
                Grid.Row="1"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Mutation Probability" />
            <TextBox
                x:Name="NsgaiiiMutationProbabilityTextBox"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiiMutationProbabilityTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
            <Label
                Grid.Row="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Crossover Probability" />
            <TextBox
                x:Name="NsgaiiiCrossoverProbabilityTextBox"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiiCrossoverProbabilityTextBox_LostFocus"
                Text="0.90"
                TextAlignment="Right" />
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Label
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Mutation" />
                <ComboBox
                    x:Name="MutationComboBox"
                    Grid.Column="1"
                    Width="90"
                    Margin="5"
                    SelectionChanged="MutationChanged" />
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                Orientation="Horizontal">
                <Label
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Crossover" />
                <ComboBox
                    x:Name="CrossoverComboBox"
                    Grid.Column="1"
                    Width="90"
                    Margin="5"
                    SelectionChanged="CrossoverChanged" />
            </StackPanel>

            <Frame
                x:Name="MutationSettings"
                Grid.Row="4"
                Grid.RowSpan="4"
                NavigationUIVisibility="Hidden" />
            <Frame
                x:Name="CrossoverSettings"
                Grid.Row="4"
                Grid.RowSpan="4"
                Grid.Column="1"
                NavigationUIVisibility="Hidden" />

            <Button
                Grid.Row="9"
                Grid.Column="1"
                Margin="5"
                Click="DefaultButton_Click"
                Content="Default" />
        </Grid>
    </GroupBox>
</Page>
