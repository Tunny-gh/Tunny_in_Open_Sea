<Page
    x:Class="Tunny.WPF.Views.Pages.Settings.Sampler.cTPESettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tunny.WPF.Views.Pages.Settings.Sampler"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="cTPESettingsPage"
    d:DesignHeight="350"
    d:DesignWidth="350"
    mc:Ignorable="d">

    <GroupBox
        Margin="5"
        Background="#E2E8F4"
        Header="BayesianOptimization (cTPE) Settings">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Seed" />
            <TextBox
                x:Name="CTpeSeedTextBox"
                Grid.Column="1"
                Margin="5"
                LostFocus="CTpeSeedTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
            <Label
                Grid.Row="1"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Number of Startup Trials" />
            <TextBox
                x:Name="CTpeStartupTrialsTextBox"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                LostFocus="CTpeStartupTrialsTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
            <Label
                Grid.Row="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Number of EI Candidates" />
            <TextBox
                x:Name="CTpeEICandidateTextBox"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5,5,5,5"
                LostFocus="CTpeEICandidateTextBox_LostFocus"
                Text="24"
                TextAlignment="Right" />
            <Label
                Grid.Row="3"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="GammaBeta" />
            <TextBox
                x:Name="CTpeGammaBetaTextBox"
                Grid.Row="3"
                Grid.Column="1"
                Margin="5"
                LostFocus="CTpeGammaTextBox_LostFocus"
                Text="0.25"
                TextAlignment="Right" />
            <Label
                Grid.Row="4"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Gamma Strategy" />
            <ComboBox
                x:Name="CTpeGammaStrategyComboBox"
                Grid.Row="4"
                Grid.Column="2"
                Margin="5" />
            <Label
                Grid.Row="5"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Prior Weight" />
            <TextBox
                x:Name="CTpePriorWeightTextBox"
                Grid.Row="5"
                Grid.Column="1"
                Margin="5"
                LostFocus="CTpePriorWeightTextBox_LostFocus"
                Text="1.0"
                TextAlignment="Right" />
            <CheckBox
                x:Name="CTpeConsiderPriorCheckBox"
                Grid.Row="6"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Consider Prior"
                IsChecked="True" />
            <CheckBox
                x:Name="CTpeMultivariateCheckBox"
                Grid.Row="6"
                Grid.Column="1"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Multivariate"
                IsChecked="True" />
            <CheckBox
                x:Name="CTpeConsiderMagicClipCheckBox"
                Grid.Row="7"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Consider Magic Clip"
                IsChecked="True" />
            <CheckBox
                x:Name="CTpeUseMinBandCheckBox"
                Grid.Row="7"
                Grid.Column="1"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Use Min BandWidth"
                IsChecked="True" />
            <Label
                Grid.Row="8"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Band Width Strategy" />
            <ComboBox
                x:Name="CTpeBandWidthStrategyComboBox"
                Grid.Row="8"
                Grid.Column="2"
                Margin="5" />
            <Label
                Grid.Row="9"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Weight Strategy" />
            <ComboBox
                x:Name="CTpeWeightStrategyComboBox"
                Grid.Row="9"
                Grid.Column="2"
                Margin="5" />

            <CheckBox
                x:Name="CTpeForceReloadCheckBox"
                Grid.Row="10"
                Grid.Column="0"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="ForceReload"
                IsChecked="False" />
            <Button
                Grid.Row="10"
                Grid.Column="1"
                Margin="5"
                Click="DefaultButton_Click"
                Content="Default" />
        </Grid>

    </GroupBox>
</Page>
