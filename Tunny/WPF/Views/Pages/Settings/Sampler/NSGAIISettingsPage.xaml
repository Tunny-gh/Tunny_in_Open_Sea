<Page
    x:Class="Tunny.WPF.Views.Pages.Settings.Sampler.NSGAIISettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tunny.WPF.Views.Pages.Settings.Sampler"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NSGAIIISettingsPage"
    d:DesignHeight="350"
    d:DesignWidth="350"
    mc:Ignorable="d">

    <GroupBox
        Margin="5"
        Background="#E2E8F4"
        Header="GenericAlgorithm (NSGA-II) Settings">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Seed" />
            <TextBox
                x:Name="NsgaiiSeedTextBox"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiSeedTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
            <Label
                Grid.Row="1"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Mutation Probability" />
            <TextBox
                x:Name="NsgaiiMutationProbabilityTextBox"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiMutationProbabilityTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
            <Label
                Grid.Row="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Crossover Probability" />
            <TextBox
                x:Name="NsgaiiCrossoverProbabilityTextBox"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiCrossoverProbabilityTextBox_LostFocus"
                Text="0.90"
                TextAlignment="Right" />
            <Label
                Grid.Row="3"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Swapping Probability" />
            <TextBox
                x:Name="NsgaiiSwappingProbabilityTextBox"
                Grid.Row="3"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiSwappingProbabilityTextBox_LostFocus"
                Text="0.50"
                TextAlignment="Right" />
            <Label
                Grid.Row="4"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Crossover" />
            <ComboBox
                x:Name="NsgaiiCrossoverComboBox"
                Grid.Row="4"
                Grid.Column="1"
                Margin="5" />

            <CheckBox
                x:Name="NsgaiiForceReloadCheckBox"
                Grid.Row="8"
                Grid.Column="0"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="ForceReload"
                IsChecked="False" />
            <Button
                Grid.Row="8"
                Grid.Column="1"
                Margin="5"
                Click="DefaultButton_Click"
                Content="Default" />
        </Grid>

    </GroupBox>
</Page>
