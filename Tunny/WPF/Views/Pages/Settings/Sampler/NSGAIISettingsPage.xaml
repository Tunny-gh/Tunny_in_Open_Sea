<Page
    x:Class="Tunny.WPF.Views.Pages.Settings.Sampler.NSGAIISettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tunny.WPF.Views.Pages.Settings.Sampler"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NSGAIIISettingsPage"
    d:DesignHeight="350"
    d:DesignWidth="350"
    mc:Ignorable="d">

    <GroupBox
        Margin="5"
        Background="#E2E8F4"
        Header="GenericAlgorithm (NSGA-II) Settings">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Seed" />
            <TextBox
                x:Name="NsgaiiSeedTextBox"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiSeedTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
            <Label
                Grid.Row="1"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Mutation Probability" />
            <TextBox
                x:Name="NsgaiiMutationProbabilityTextBox"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiMutationProbabilityTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
            <Label
                Grid.Row="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Crossover Probability" />
            <TextBox
                x:Name="NsgaiiCrossoverProbabilityTextBox"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                LostFocus="NsgaiiCrossoverProbabilityTextBox_LostFocus"
                Text="0.90"
                TextAlignment="Right" />
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Label
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Mutation" />
                <ComboBox
                    x:Name="NsgaiiMutationComboBox"
                    Grid.Column="1"
                    Width="90"
                    Margin="5" />
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                Orientation="Horizontal">
                <Label
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Crossover" />
                <ComboBox
                    x:Name="NsgaiiCrossoverComboBox"
                    Grid.Column="1"
                    Width="90"
                    Margin="5" />
            </StackPanel>

            <Frame
                x:Name="MutationSettings"
                Grid.Row="4"
                Grid.RowSpan="5"
                NavigationUIVisibility="Hidden" />
            <Frame
                x:Name="CrossoverSettings"
                Grid.Row="4"
                Grid.RowSpan="5"
                Grid.Column="1"
                NavigationUIVisibility="Hidden" />

            <Button
                Grid.Row="10"
                Margin="5"
                Click="WallaceiDefaultButton_Click"
                Content="Wallacei Default"
                ToolTip="This setting is close to the default for Wallacei. Although it will work close, it is not guaranteed to produce the same results." />
            <Button
                Grid.Row="10"
                Grid.Column="1"
                Margin="5"
                Click="DefaultButton_Click"
                Content="Tunny Default" />
        </Grid>

    </GroupBox>
</Page>
