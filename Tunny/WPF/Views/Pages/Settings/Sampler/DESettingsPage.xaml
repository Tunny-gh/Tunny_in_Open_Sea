<Page
    x:Class="Tunny.WPF.Views.Pages.Settings.Sampler.DESettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tunny.WPF.Views.Pages.Settings.Sampler"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DESettingsPage"
    d:DesignHeight="350"
    d:DesignWidth="350"
    mc:Ignorable="d">

    <GroupBox
        Margin="5"
        Background="#E2E8F4"
        Header="DE Sampler Settings">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Seed" />
            <TextBox
                x:Name="DESeedTextBox"
                Grid.Column="1"
                Margin="5"
                LostFocus="DESeedTextBox_LostFocus"
                Text="AUTO"
                TextAlignment="Right" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="DE Factor" />
            <TextBox
                x:Name="DEFactorTextBox"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Text="0.8"
                TextAlignment="Right" />
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Crossover Ratio" />
            <TextBox
                x:Name="DECrossoverRatioTextBox"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                Text="0.7"
                TextAlignment="Right" />

            <CheckBox
                x:Name="DEForceReloadCheckBox"
                Grid.Row="8"
                Grid.Column="0"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="ForceReload"
                IsChecked="False" />

            <Button
                Grid.Row="8"
                Grid.Column="1"
                Margin="5"
                Click="DefaultButton_Click"
                Content="Default" />
        </Grid>
    </GroupBox>
</Page>
