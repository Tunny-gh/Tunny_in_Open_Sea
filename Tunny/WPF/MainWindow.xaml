<Window
    x:Class="Tunny.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tunny UI"
    Width="700"
    Height="450"
    Background="#FF93C6F8"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">
    <Grid Background="#FF93C6F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Save Settings" InputGestureText="Ctrl+S" />
                <Separator />
                <MenuItem Header="Set Storage Path" InputGestureText="Ctrl+O" />
                <MenuItem Header="Open Tunny Folder" />
                <Separator />
                <MenuItem Click="ExitMenuItem_Click" Header="Exit" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Document">
                    <MenuItem Click="TunnyDocumentMenuItem_Click" Header="Tunny" />
                    <MenuItem Click="OptunaSamplerMenuItem_Click" Header="Optuna Sampler" />
                </MenuItem>
                <MenuItem Header="License">
                    <MenuItem Click="TunnyLicenseMenuItem_Click" Header="Tunny" />
                    <MenuItem Click="PythonPackagesLicenseMenuItem_Click" Header="Python Library" />
                    <MenuItem Click="TTDesignExplorerLicenseMenuItem_Click" Header="TT DesignExplorer" />
                </MenuItem>
            </MenuItem>
        </Menu>
        <TabControl
            x:Name="tabControl"
            Grid.Row="1"
            Margin="10,10,10,10">
            <TabItem Header="Optimize">
                <Frame Background="#FFF5F5F5" Source="pack://application:,,,/Tunny;component/WPF/Pages/OptimizePage.xaml" />
            </TabItem>
            <TabItem Header="Visualize">
                <Frame Background="#FFF5F5F5" Source="pack://application:,,,/Tunny;component/WPF/Pages/VisualizePage.xaml" />
            </TabItem>
            <TabItem Header="Output">
                <Grid Background="#FFF5F5F5" />
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFF5F5F5" />
            </TabItem>
            <TabItem Header="Ducument">
                <Frame Background="#FFF5F5F5" Source="pack://application:,,,/Tunny;component/WPF/Pages/DocumentPage.xaml" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
